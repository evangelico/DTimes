.wrapper-dropdown {
    /* Size and position */
    position: relative; /* Enable absolute positionning for children and pseudo elements */
    padding: 16px 10px;
    float:left;
    /*margin: 0 auto;*/

    /* Styles */
    background: #368ee0;
    color: #fff;
    outline: none;
    cursor: pointer;
    text-align:center;

    /* Font settings */
    font-weight: bold;
}

.wrapper-dropdown a{
	text-decoration:none;
	color: #ffffff;
}

.wrapper-dropdown:hover{
	background: #1e74c5;
}

.wrapper-dropdown.selected,.wrapper-dropdown.active.selected{
	background: #ffffff;
	color: #000000;
}


.wrapper-dropdown.multi:after {
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    right: 9px;
    top: 50%;
    margin-top: -6px;
    border-width: 6px 0 6px 6px;
    border-style: solid;
    border-color: transparent #fff;    
}

.wrapper-dropdown.multi.selected:after{
	border-color: transparent #000000;   
}

.wrapper-dropdown .dropdown {
    /* Size & position */
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;

    /* Styles */
    background: #fff;
    list-style: none;
    font-weight: normal; /* Cancels previous font-weight: bold; */
    border-right: 1px solid #1e74c5;
    border-bottom: 1px solid #1e74c5;
    border-left: 1px solid #1e74c5;
    text-align:left;

    /* Hiding */
    opacity: 0;
    pointer-events: none;
}

.wrapper-dropdown .dropdown li a {
    display: block;
    text-decoration: none;
    color: #333333;
    padding: 10px 20px;
}

/* Hover state */
.wrapper-dropdown .dropdown li:hover a {
    background: #368ee0;
    color: #ffffff;
}

/* Active state */
.wrapper-dropdown.active .dropdown {
    opacity: 1;
    pointer-events: auto;
}

.wrapper-dropdown.active:after {
    border-color: #ffffff transparent;
    border-width: 6px 6px 0 6px ;
    margin-top: -3px;
}

.wrapper-dropdown.active.selected:after {
    border-color: #ffffff transparent;
}

